doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Formulario de productos
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF' crossorigin='anonymous')
a.btn.btn-success(style='display: flex;position: absolute;right: 2vh;top: 1vh;' href='/')
  | Formulario
.container(style='display:flex;justify-content: space-around;')
  table.table.table-hover(style='width:50%')
    thead
      tr
        th(scope='col') #
        th(scope='col') Nombre
        th(scope='col') Precio
        th(scope='col') Imagen
      each val in mensaje
        tr
            th(scope='row')= val.id
            td= val.title
            td= val.price
            td
                -var img = val.thumbNail
                img(src = img, width=100)

    tbody